{
  "name": "react-native-bootsplash",
  "version": "4.0.0-alpha.1",
  "license": "MIT",
  "description": "Display a bootsplash on your app starts. Hide it when you want.",
  "author": "Mathieu Acthernoene <zoontek@gmail.com>",
  "homepage": "https://github.com/zoontek/react-native-bootsplash",
  "types": "dist/typescript/index.d.ts",
  "main": "dist/commonjs/index.js",
  "module": "dist/module/index.js",
  "files": [
    "/android",
    "/dist",
    "/ios",
    "/src",
    "RNBootSplash.podspec",
    "ReactNativeBootsplash.res",
    "bsconfig.json",
    "package.json",
    "react-native.config.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zoontek/react-native-bootsplash.git"
  },
  "keywords": [
    "react-native-bootsplash",
    "react-native",
    "boot-splash",
    "bootsplash",
    "boot-screen",
    "bootscreen",
    "splash-screen",
    "splashscreen",
    "launch-screen",
    "launchscreen"
  ],
  "scripts": {
    "setup-hooks": "git config --local core.hooksPath .hooks",
    "format": "prettier '**/*.{js,json,md,ts,tsx}' --write",
    "prepare": "yarn setup-hooks && bob build"
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "dist",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "lint-staged": {
    "**/*.{js,json,md,ts,tsx}": "prettier --write"
  },
  "peerDependencies": {
    "react-native": ">=0.65.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "fs-extra": "^10.0.0",
    "jimp": "^0.16.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@react-native-community/bob": "^0.17.1",
    "@types/fs-extra": "^9.0.13",
    "@types/react-native": "^0.66.4",
    "bs-platform": "^9.0.2",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-native": "^0.66.3",
    "typescript": "^4.4.4"
  }
}
